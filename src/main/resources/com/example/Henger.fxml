<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="HengerController" spacing="10" padding="20">
    
    <Label text="Sugár (r):"/>
    <TextField fx:id="radiusField"/>
    
    <Label text="Magasság (h):"/>
    <TextField fx:id="heightField"/>
    
    <Button text="Számítás és mentés" onAction="#calculateAndSave"/>
    
    <Label fx:id="resultLabel"/>
    
    <TableView fx:id="tableView">
        <columns>
            <TableColumn text="Sugár" fx:id="colRadius"/>
            <TableColumn text="Magasság" fx:id="colHeight"/>
            <TableColumn text="Felszín" fx:id="colSurface"/>
        </columns>
    </TableView>
</VBox>

